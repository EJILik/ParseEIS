<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EIS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EIS.styles.css" asp-append-version="true" />
</head>
<div class="container">
    <header class="d-flex justify-content-center py-3">
        <ul class="nav nav-pills">
            <li class="nav-item"><a asp-area="" asp-page="/Index" class="nav-link active" aria-current="page">Поиск позиции по КТРУ</a></li>
            <li class="nav-item"><a href="https://zakupki.gov.ru/epz/main/public/home.html" class="nav-link">ЕИС Закупки</a></li>
            <li class="nav-item"><a asp-area="" asp-page="/KTRU_Category" class="nav-link active" aria-current="page">Поиск категории по КТРУ</a></li>
        </ul>
    </header>
</div>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - <a asp-area="" asp-page="/Index">ЕИС Анализ</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>